@using modulosASP.DTO;
@model ProyectoDTO 
    @*se manda llmar al dto si se va imprimir datos es un list*@
@{
    ViewBag.Title = "AgregarProyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar Nuevo Proyecto</h2>

<div class="row">
    <div class="col-sm-6 col-md-6">

        @using (Html.BeginForm("AgregarProyecto", "Proyecto", FormMethod.Post))
        {
        
        <div class="card">
            <div class="card-body">
                <div class="mt-3">
                    @Html.LabelFor(p => p.Proyecto)
                    @Html.TextBoxFor(p => p.Proyecto, new { @class = "form-control" })
                </div>

                <div class="mt-3">
                    @Html.LabelFor(p => p.Tipo)
                    @Html.TextBoxFor(p => p.Tipo, new { @class = "form-control" })
                </div>

                <div class="mt-3">
                    <input type="submit" class="btn btn-primary" value="guardar" />
                </div>
            </div>
        </div>
        }
    </div>
</div>






